import sys, os
from PyQt5.QtCore import *
from PyQt5.QtWidgets import *


class SplitterExample(QWidget):
    def __init__(self):
        super(SplitterExample, self).__init__()
        # self.path = os.getcwd()
        self.path = r"D:\PROGRAMMING\Notes_App\directory_for_notes"
        if not os.path.exists(self.path + r"\MainNote.json"):
            self.create_main_file()

        self.initUI()

    def initUI(self):
        hbox = QHBoxLayout(self)
        self.setWindowTitle('Test Window')
        self.setGeometry(300, 300, 300, 200)

        splitter1 = QSplitter(Qt.Horizontal)
        textedit = QTextEdit()
        textedit.setText(self.open_text())
        splitter1.addWidget(textedit)

        textedit.textChanged.connect(lambda: self.save_text(textedit))

        splitter1.setSizes([100, 200])
        splitter2 = QSplitter(Qt.Vertical)
        splitter2.addWidget(splitter1)
        hbox.addWidget(splitter2)
        self.setLayout(hbox)

    def save_text(self, textedit):
        with open(self.path + r'\MainNote.json', 'w') as f:
            f.write(textedit.toPlainText())

    def create_main_file(self):
        text = ""
        with open(self.path + r'\MainNote.json', 'w+') as f:
            f.write(text)

    def open_text(self):
        with open(self.path + r'\MainNote.json', 'r') as f:
            json_data = f.read()
        return json_data

if __name__ == '__main__':
    app = QApplication(sys.argv)
    demo = SplitterExample()
    demo.show()
    sys.exit(app.exec_())
